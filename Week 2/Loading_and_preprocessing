import pandas as pd

# Upload the customer data
customer_data = pd.read_csv(r"Week 2\Customer_ID.csv")

# Upload the city data
city_data = pd.read_csv(r"Week 2\City.csv")

# Upload the transaction data
transaction_data = pd.read_csv(r"Week 2\Transaction_ID.csv")

# Upload the cab data
cab_data = pd.read_csv(r"Week 2\Cab_Data.csv")

# Step 1: Data Loading and Understanding

# Print the first few rows of each dataset
print("first few rows of each dataset\n\n")
print("Customer Data:")
print(customer_data.head())
print("\nCity Data:")
print(city_data.head())
print("\nTransaction Data:")
print(transaction_data.head())
print("\nCab Data:")
print(cab_data.head())

# Get summary statistics for each dataset
print("summary of each dataset\n\n")
print("\nCustomer Data Summary:")
print(customer_data.describe())
print("\nCity Data Summary:")
print(city_data.describe())
print("\nTransaction Data Summary:")
print(transaction_data.describe())
print("\nCab Data Summary:")
print(cab_data.describe())

# Step 2: Data Cleaning and Preprocessing

# Check for missing values
print("\nMissing Values:")
print(customer_data.isnull().sum())
print(city_data.isnull().sum())
print(transaction_data.isnull().sum())
print(cab_data.isnull().sum())

# Check for data types
print("\nData Types:")
print(customer_data.dtypes)
print(city_data.dtypes)
print(transaction_data.dtypes)
print(cab_data.dtypes)

# Note: This code only performs the first two steps of the analysis plan. You will need to continue with the remaining steps to fully explore and analyze the data.
